
<div class="mt-10">
  <div class="max-w-md mx-auto bg-white py-10 px-5 shadow-md rounded-lg">
    <h2 class="text-2xl mb-5">Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :Mot_de_passe, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border rounded-md py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
          <%= f.label :Se_souvenir_de_moi, class: "text-sm" %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.submit "Se connecter", class: "btn bg-brown text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
