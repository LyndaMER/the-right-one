<%= render "components/navbar" %>
<div class="main-container-home">
  <div class="">
    <p class="text-4xl font-extrabold dark:text-black">Hello Anne-Sophie,</p>
    <p class="text-2xl font-extrabold dark:text-black">Bienvenue sur The Right One ! üé¨</p>
  </div>
  <div class="contain">
    <div class="swiper" data-controller="carousel">
      <div class="swiper-wrapper" data-controller="slide">
        <% @users.each do |user| %>
          <div class="swiper-slide" data-slide-target="slide">
            <div class="swiper-item">
              <div class="block-card-home user-card">
                <%= link_to user_path(user) do %>
                  <img src="<%= user.pola_face %>" alt="Photo d'un artiste" class="swiper-image picture-home">
                <%end%>
                <div class= "titre">
                  <%= user.first_name.capitalize %> <%= user.last_name.upcase %>
                </div>
                <div>
                  <%= user.city %> - <%= user.age %> ans
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="audition-users">
      <div class="audition-container block bg-white relative">
        <div>
          <h2 class="mb-2 text-lg font-semibold text-gray-900 dark:text-black mt-2 mb-4">üìã Auditions les plus r√©centes</h2>
          <ul class="auditions">
            <% @auditions.each do |audition| %>
              <%= link_to audition_path(audition) do %>
                <li>
                  <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate dark:text-black">
                        <%= audition.name%>
                      </p>
                    </div>
                    <div class="inline-flex items-center text-base font-semibold text-gray-900 dark:text-black">
                      <%= audition.date %>
                    </div>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <%= link_to"+ Ajouter une audition", new_audition_path, class: "btn bg-brown new-audition" %>
      </div>
      <%# Bloc des artistes %>
      <div class="users-container block bg-brown">
        <div class="flex items-center justify-between">
          <p><%= @users.count %> artistes enregistr√©s ‚≠ê</p>
          <%= link_to"+ Ajouter un artiste", new_artist_path, class: "btn bg-white" %>
        </div>
        <div class="artists-home-card flex items-center">
          <% @last_user.each do |user| %>
            <%= link_to user_path(user) do %>
              <div>
                <img class="littlepicture" src="<%= user.pola_face %>" alt="">
              </div>
            <% end %>
            <div class="">
              <h1 class= "titre"><%= user.first_name.capitalize %> <%= user.last_name.upcase %></h1>
              <h2><%= user.age %> ans</h2>
              <h3><%= user.city %></h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "components/footer"%>
